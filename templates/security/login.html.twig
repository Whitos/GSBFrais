{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col justify-center px-6 pb-20">
        <div class="w-full max-w-md mx-auto bg-white rounded-lg shadow-lg p-8 space-y-6">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold text-gray-900">Bienvenue !</h2>
                <p class="mt-2 text-sm text-gray-600">
                    Connectez-vous pour accéder à votre espace.
                </p>
            </div>

            <form action="{{ path('app_login') }}" method="post" class="space-y-6">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {% if error %}
                    <div class="rounded-md bg-red-50 p-4">
                        <p class="text-sm text-red-700">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </p>
                    </div>
                {% endif %}

                <div class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700">Identifiant</label>
                        <input id="username" name="_username" type="text" required
                               class="w-full mt-1 px-4 py-2 rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                        <input id="password" name="_password" type="password" required
                               class="w-full mt-1 px-4 py-2 rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember_me" name="_remember_me" type="checkbox"
                               class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                        <label for="remember_me" class="ml-2 block text-sm text-gray-700">Se souvenir de moi</label>
                    </div>
                    <div>
                        Mot de passe oublié ?
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center bg-blue-600 text-white py-2 px-4 rounded-md shadow-sm text-sm font-medium hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Se connecter
                    </button>
                </div>
            </form>

            <div class="text-center">
                <p class="text-sm text-gray-600">
                    Pas encore inscrit ?
                    <a href="{{ path('app_register') }}" class="text-blue-600 hover:underline">Créer un compte</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
