{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
<div class="w-full max-w-md bg-white rounded-lg shadow-md p-6 space-y-6">
{% if error %}
<div class="bg-red-100 text-red-700 p-4 rounded-md">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
<div class="text-gray-700 mb-3">
You are logged in as <span class="font-semibold">{{ app.user.userIdentifier }}</span>,
<a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">Logout</a>
</div>
{% endif %}

<h1 class="text-2xl font-bold text-gray-800 text-center">Please sign in</h1>

<form method="post" class="space-y-4">
<div>
<label for="username" class="block text-gray-700 font-semibold mb-1">Email</label>
<input type="email" name="_username" id="username" value="{{ last_username }}"
class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500"
autocomplete="email" required autofocus>
</div>

<div>
<label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
<input type="password" name="_password" id="password"
class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500"
autocomplete="current-password" required>
</div>

<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

<div class="flex items-center">
<input type="checkbox" name="_remember_me" id="_remember_me" class="h-4 w-4 text-blue-600 border-gray-300 rounded">
<label for="_remember_me" class="ml-2 block text-gray-700">Remember me</label>
</div>

<div class="text-right">
<a href="/reset-password" class="text-blue-600 hover:underline">Forgot password?</a>
</div>

<button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
Sign in
</button>
</form>
</div>
</div>
{% endblock %}
