{% extends 'base.html.twig' %}

{% block title %}Détails du FraisForfait{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 p-4">
        <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-lg">
            <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Détails du FraisForfait</h1>

            <table class="w-full border border-gray-200 rounded-lg mb-6">
                <tbody>
                <tr class="bg-gray-50">
                    <th class="py-2 px-4 text-gray-700 font-medium border-b">ID</th>
                    <td class="py-2 px-4 border-b">{{ frais_forfait.id }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-gray-700 font-medium border-b bg-gray-50">Libellé</th>
                    <td class="py-2 px-4 border-b">{{ frais_forfait.libelle }}</td>
                </tr>
                <tr class="bg-gray-50">
                    <th class="py-2 px-4 text-gray-700 font-medium border-b">Montant</th>
                    <td class="py-2 px-4 border-b">{{ frais_forfait.montant }} €</td>
                </tr>
                </tbody>
            </table>

            <div class="flex justify-between mt-4">
                <a href="{{ path('app_frais_forfait_index') }}" class="text-blue-600 hover:text-blue-700 hover:underline">
                    ← Retour à la liste
                </a>


                    <a href="{{ path('app_frais_forfait_edit', {'id': frais_forfait.id}) }}"
                       class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded shadow">
                        Modifier
                    </a>

                    <div class="flex gap-4">
                        <a href="{{ path('app_frais_forfait_delete', {'id': frais_forfait.id}) }}"
                           class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded shadow">
                            Supprimer
                        </a>
                        <div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
