{% extends 'base.html.twig' %}

{% block title %}Etat index{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6 text-center">Etat Index</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
                <thead class="bg-gray-200">
                <tr>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">ID</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Libelle</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for etat in etats %}
                    <tr class="hover:bg-gray-100">
                        <td class="py-2 px-4 border-b border-gray-300">{{ etat.id }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ etat.libelle }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">
                            <a href="{{ path('app_etat_show', {'id': etat.id}) }}" class="text-blue-500 hover:underline mr-2">Show</a>
                            <a href="{{ path('app_etat_edit', {'id': etat.id}) }}" class="text-green-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="py-2 px-4 border-b border-gray-300 text-center text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6 text-center">
            <a href="{{ path('app_etat_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600">Create New</a>
        </div>
    </div>
{% endblock %}
