{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6 text-center">User Index</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
                <thead class="bg-gray-200">
                <tr>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">ID</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Email</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden md:table-cell">Roles</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden sm:table-cell">Password</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Login</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden md:table-cell">Nom</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden sm:table-cell">Prenom</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden md:table-cell">Adresse</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Cp</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Ville</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden md:table-cell">Date Embauche</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Old ID</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600 hidden sm:table-cell">Is Verified</th>
                    <th class="py-2 px-4 border-b border-gray-300 text-left font-medium text-gray-600">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="hover:bg-gray-100">
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.id }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.email }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden md:table-cell">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden sm:table-cell">{{ user.password }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.login }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden md:table-cell">{{ user.nom }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden sm:table-cell">{{ user.prenom }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden md:table-cell">{{ user.adresse }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.cp }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.ville }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden md:table-cell">{{ user.dateEmbauche ? user.dateEmbauche|date('Y-m-d') : '' }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.oldId }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 hidden sm:table-cell">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-blue-500 hover:underline mr-2">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-green-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="14" class="py-2 px-4 border-b border-gray-300 text-center text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6 text-center">
            <a href="{{ path('app_user_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600">Create New</a>
        </div>
    </div>
{% endblock %}
