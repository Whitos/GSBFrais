{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p class="font-bold">Erreur</p>
                    <p>{{ flash_error }}</p>
                </div>
            {% endfor %}

            <h1 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Inscription</h1>

            {{ form_start(registrationForm) }}

            <div class="mb-4">
                {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.nom) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.prenom, 'Pr√©nom', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.login, 'Nom d\'utilisateur', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.login, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.login) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.adresse, 'Adresse', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.adresse, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.adresse) }}
            </div>

            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    {{ form_label(registrationForm.cp, 'Code postal', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                    {{ form_widget(registrationForm.cp, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                    {{ form_errors(registrationForm.cp) }}
                </div>
                <div>
                    {{ form_label(registrationForm.ville, 'Ville', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                    {{ form_widget(registrationForm.ville, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                    {{ form_errors(registrationForm.ville) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.date_embauche, 'Date d\'embauche', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.date_embauche, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.date_embauche) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4 flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'label_attr': {'class': 'text-gray-600'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.old_id, 'Identifiant', {'label_attr': {'class': 'block text-gray-600 mb-2'}}) }}
                {{ form_widget(registrationForm.old_id, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                {{ form_errors(registrationForm.old_id) }}
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-200">
                S'inscrire
            </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}